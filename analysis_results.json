{
  "study_metadata": {
    "title": "Scopus Citation Coverage Bias Analysis",
    "sample_size": 600,
    "matched_to_openalex": 570,
    "match_rate": 0.95,
    "analysis_date": "2024-12",
    "data_source": "OpenAlex 2023 rankings",
    "comparison_database": "Scopus"
  },

  "sample_composition": {
    "total_researchers": 600,
    "openalex_matched": 570,
    "not_matched": 30,
    "field_type_distribution": {
      "book_heavy": {
        "n": 122,
        "percentage": 21.4
      },
      "mixed": {
        "n": 333,
        "percentage": 58.4
      },
      "journal_heavy": {
        "n": 115,
        "percentage": 20.2
      }
    }
  },

  "hypothesis_1_publisher_bias": {
    "hypothesis": "Researchers who publish more with Elsevier receive higher citation coverage in Scopus",
    "result": "CONFIRMED",
    "statistics": {
      "rank_biserial_correlation": -0.539,
      "cohens_d": -0.120,
      "cliffs_delta": 0.539,
      "cliff_interpretation": "large",
      "mann_whitney_u": 26780.5,
      "p_value": 2.367958044444666e-19,
      "bonferroni_corrected": true,
      "holm_bonferroni_corrected": true
    },
    "group_comparison": {
      "high_elsevier": {
        "n": 174,
        "threshold": ">=median",
        "median_coverage": 0.6536,
        "coverage_percentage": 65.36
      },
      "low_elsevier": {
        "n": 200,
        "threshold": "<median",
        "median_coverage": 0.3354,
        "coverage_percentage": 33.54
      },
      "difference_pp": 31.82,
      "relative_increase": 94.9
    },
    "interpretation": "Large, highly significant Elsevier advantage in citation coverage"
  },

  "hypothesis_2_book_bias": {
    "hypothesis": "Researchers who write books receive lower citation coverage",
    "result": "CONFIRMED",
    "statistics": {
      "spearman_correlation": -0.533,
      "correlation_p_value": 7.374133502833159e-29,
      "rank_biserial_correlation": 0.749,
      "cohens_d": -0.155,
      "cliffs_delta": -0.749,
      "cliff_interpretation": "very large",
      "mann_whitney_u": 1764.0,
      "p_value": 2.4356484913154213e-23,
      "bonferroni_corrected": true,
      "holm_bonferroni_corrected": true
    },
    "group_comparison": {
      "book_heavy_fields": {
        "n": 122,
        "median_coverage": 0.3182,
        "coverage_percentage": 31.82
      },
      "journal_heavy_fields": {
        "n": 115,
        "median_coverage": 0.7375,
        "coverage_percentage": 73.75
      },
      "difference_pp": 41.93,
      "relative_increase": 131.8
    },
    "interpretation": "Very large book disadvantage, strongest effect in study",
    "notable_case": {
      "researcher": "Ernst Gombrich",
      "field": "Art History",
      "openalex_rank": 26,
      "scopus_rank": 27032,
      "rank_discrepancy": 27006,
      "note": "Most cited art historian, The Story of Art sold 40M+ copies"
    }
  },

  "hypothesis_3_open_access_bias": {
    "hypothesis": "Researchers who publish more open access content receive lower coverage",
    "result": "CONFIRMED",
    "statistics": {
      "rank_biserial_correlation": -0.244,
      "cohens_d": -0.121,
      "cliffs_delta": 0.244,
      "cliff_interpretation": "small to medium",
      "mann_whitney_u": 21744.5,
      "p_value": 4.5656724861970595e-05,
      "bonferroni_corrected": true,
      "holm_bonferroni_corrected": true
    },
    "group_comparison": {
      "high_oa": {
        "n": 185,
        "threshold": ">=median",
        "median_coverage": 0.5391,
        "coverage_percentage": 53.91
      },
      "low_oa": {
        "n": 189,
        "threshold": "<median",
        "median_coverage": 0.3629,
        "coverage_percentage": 36.29
      },
      "difference_pp": 17.62,
      "relative_increase": 48.6
    },
    "interpretation": "Small-medium OA disadvantage, independent from other effects"
  },

  "hypothesis_4_field_bias": {
    "hypothesis": "Book-heavy fields have systematically worse coverage than journal-heavy fields",
    "result": "CONFIRMED",
    "statistics": {
      "kruskal_wallis_h": 127.843,
      "p_value": 1.7344879770280996e-28,
      "test_type": "omnibus (3-group)",
      "bonferroni_corrected": true,
      "holm_bonferroni_corrected": true
    },
    "field_type_coverage": {
      "book_heavy": {
        "n": 122,
        "median_coverage": 0.3182,
        "coverage_percentage": 31.82
      },
      "mixed": {
        "n": 137,
        "median_coverage": 0.3626,
        "coverage_percentage": 36.26
      },
      "journal_heavy": {
        "n": 115,
        "median_coverage": 0.7375,
        "coverage_percentage": 73.75
      }
    },
    "max_difference_pp": 41.93,
    "interpretation": "Massive field-level differences, structural bias against humanities"
  },

  "robustness_check_orcid": {
    "purpose": "Verify effects persist with ORCID-verified identities",
    "sample_size": 362,
    "percentage_of_matched": 63.5,
    "elsevier_effect": {
      "high_elsevier_coverage": 0.628,
      "low_elsevier_coverage": 0.414,
      "difference_pp": 21.4,
      "p_value": "<0.001",
      "result": "Effect persists in ORCID-verified subset"
    },
    "interpretation": "Publisher bias cannot be attributed to name disambiguation errors"
  },

  "robustness_check_citation_quality": {
    "purpose": "Test if coverage bias explained by citation quality differences",
    "method": "Stratified analysis by citation tertiles",
    "tertiles": {
      "high_citation_impact": {
        "n": 119,
        "mean_cites_per_pub": 112.0,
        "high_elsevier": {
          "n": 59,
          "coverage": 0.763
        },
        "low_elsevier": {
          "n": 60,
          "coverage": 0.416
        },
        "difference_pp": 34.6,
        "p_value": 1.81127048494084e-09
      },
      "medium_citation_impact": {
        "n": 133,
        "mean_cites_per_pub": 38.7,
        "high_elsevier": {
          "n": 62,
          "coverage": 0.600
        },
        "low_elsevier": {
          "n": 71,
          "coverage": 0.353
        },
        "difference_pp": 24.7,
        "p_value": 3.5813022731933467e-07
      },
      "low_citation_impact": {
        "n": 122,
        "mean_cites_per_pub": 16.3,
        "high_elsevier": {
          "n": 52,
          "coverage": 0.419
        },
        "low_elsevier": {
          "n": 70,
          "coverage": 0.266
        },
        "difference_pp": 15.3,
        "p_value": 0.0001799307938353755
      }
    },
    "result": "Elsevier advantage exists at EVERY citation quality level",
    "interpretation": "Citation quality does NOT explain publisher bias; effect largest for highest-impact researchers"
  },

  "robustness_check_multivariate_regression": {
    "purpose": "Test independent effects with multiple controls",
    "dependent_variable": "Coverage ratio (Scopus/OpenAlex)",
    "models": {
      "baseline": {
        "predictors": ["elsevier_pct"],
        "elsevier_beta": -1.390,
        "elsevier_p": 0.412,
        "r_squared": 0.00181,
        "result": "Not significant (outliers mask effect)"
      },
      "with_citation_control": {
        "predictors": ["elsevier_pct", "total_citations"],
        "elsevier_beta": -1.421,
        "elsevier_p": 0.406,
        "r_squared": 0.00186,
        "result": "Not significant"
      },
      "full_model": {
        "predictors": ["elsevier_pct", "total_citations", "books_pct", "oa_pct", "field_controls"],
        "elsevier_beta": -6.052,
        "elsevier_p": 0.006,
        "r_squared": 0.0407,
        "result": "SIGNIFICANT - Independent Elsevier effect confirmed"
      }
    },
    "interpretation": "Publisher, book, and OA biases operate independently; all contribute to model"
  },

  "award_winners_case_studies": {
    "purpose": "Test coverage for externally validated eminent scholars",
    "n_cases": 9,
    "cases": [
      {
        "name": "Claudia Goldin",
        "award": "Nobel Prize Economics",
        "year": 2023,
        "field": "Economic History",
        "notable_books": ["Understanding the Gender Gap (1990)", "Career and Family (2021)"],
        "expected_coverage": "Lower due to book focus"
      },
      {
        "name": "Elinor Ostrom",
        "award": "Nobel Prize Economics",
        "year": 2009,
        "field": "Institutional Economics",
        "notable_books": ["Governing the Commons (1990)"],
        "expected_coverage": "Lower due to qualitative work",
        "note": "First woman to win Economics Nobel"
      },
      {
        "name": "Eric Foner",
        "award": "Pulitzer Prize History",
        "year": 2011,
        "field": "American History",
        "notable_books": ["The Fiery Trial (2010)", "Reconstruction (1988)"],
        "expected_coverage": "Very low (book-dominated field)"
      },
      {
        "name": "Jill Lepore",
        "award": "Bancroft Prize (multiple)",
        "year": 2019,
        "field": "American History",
        "notable_books": ["These Truths (2018)"],
        "expected_coverage": "Very low (trade publisher, public intellectual)"
      },
      {
        "name": "Clifford Geertz",
        "award": "National Humanities Medal, Kyoto Prize",
        "field": "Anthropology",
        "notable_books": ["The Interpretation of Cultures (1973)"],
        "expected_coverage": "Low (book-dominated field)",
        "status": "Deceased 2006"
      },
      {
        "name": "Ernst Gombrich",
        "award": "Multiple (Erasmus Prize, Goethe Prize)",
        "field": "Art History",
        "notable_books": ["The Story of Art (1950, 40M+ copies)", "Art and Illusion (1960)"],
        "openalex_rank": 26,
        "scopus_rank": 27032,
        "rank_discrepancy": 27006,
        "status": "CONFIRMED IN SAMPLE - massive ranking discrepancy"
      }
    ],
    "interpretation": "Even Nobel and Pulitzer winners face severe undercounting when book-focused"
  },

  "ranking_replication_study": {
    "purpose": "Compare OpenAlex vs Scopus rankings to quantify ranking bias",
    "sample_size": 537,
    "percentage_of_matched": 94.2,
    "ranking_correlation": {
      "spearman_rho": 0.695,
      "p_value": 8.24e-79,
      "shared_variance_r_squared": 0.483,
      "interpretation": "Moderate correlation, substantial disagreement"
    },
    "coverage_rank_correlation": {
      "global_rank_vs_coverage": {
        "spearman_rho": -0.297,
        "p_value": 3.975754213118631e-09,
        "interpretation": "Lower coverage predicts worse global rank"
      },
      "field_rank_vs_coverage": {
        "spearman_rho": 0.365,
        "p_value": 2.2101361102885996e-13
      }
    },
    "coverage_quartile_analysis": {
      "top_quartile_median_coverage": 54.75,
      "bottom_quartile_median_coverage": 29.20,
      "difference_pp": 25.55
    },
    "interpretation": "Coverage bias directly translates to ranking distortion"
  },

